.dl .coupon a.open-code{color:#ffffff;}
.dl .coupon .code{letter-spacing:1px;border-radius:4px;margin-top:10px;padding:10px 15px;color:#f1c40f;background:#f0f0f0}
</style>









<script>
  function copyCode (code) {
  // Get the text field
  var copyText = document.getElementById("coupon-"+code).innerHTML
  console.log(copyText)
  return new Promise(async()=>{
    try {
      await navigator.clipboard.writeText(copyText);
      console.log('Content copied to clipboard');
      alert("Copied the text: " + copyText);
    } catch (err) {
      console.error('Failed to copy: ', err);
    }

  })
}
</script> 