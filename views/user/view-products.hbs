<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
        <div class="card mt-5" style="width: 12rem; margin-left:4em">
          <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn ml-4 btn-info pl-4 pr-4">buy</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>