

<section>
    <div class="container mt-5">
<table class="table table-hover" style="margin-top:5em">

  <thead>
    <tr>
        {{!-- <th scope="col">No.</th> --}}
      <th scope="col">Name</th>
      <th scope="col">Mail Id</th>
      {{!-- <th scope="col">prize</th> --}}
      <th scope="col">Status</th>
      <th scope="col">State</th>
      {{!-- <th scope="col">Block</th> --}}
      
    </tr>
  </thead>
  <tbody>
    <br>

    {{#each data}}
    
    <tr>
      {{!-- <th scope="row">{{@index}}</th> --}}
      <td>{{name}}</td>
    <td>{{email}}</td>

  {{#if status}}
  <td><span class="badge rounded-pill alert-success" style="width:5em">Active</span></td>
    <td>
<button class="badge rounded-pill alert-info" style="height: 3em;width: 6em;">
  <a href="/admin/user-block/{{slug}}">block</a>
</button>
    </td>
    {{else}}
    <td>
      <span class="badge rounded-pill alert-danger" style="width:5em">Inactive</span>
    </td>
  <td>
<button class="badge rounded-pill alert-alert" style="height: 3em;width: 6em;">
  <a href="/admin/user-unblock/{{slug}}">unblock</a>
</button>
    </td>
    {{/if}}


    </tr>

    {{/each}}
    {{!-- <tr>
      <th scope="row">2</th>
      <td>Jacob</td>
      <td>Thornton</td>
      <td>@fat</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td colspan="2">Larry the Bird</td>
      <td>@twitter</td>
    </tr> --}}
  </tbody>
</table>
    </div>
<br>
    <div class="container">
     <nav aria-label="Page navigation example">

  <ul class="pagination" style="justify-content: center;">
    <li class="page-item">
      <a style="pointer-events:{{checkPagecount pageCount}}" class="page-link" href="/admin/list-users/{{minus pageCount}}" aria-label="Previous">
        <span  aria-hidden="true" style="color: #047b67;">&laquo;</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" style="color:black;pointer-events:none" href="#">{{plus pageCount}}</a></li>

    <li class="page-item">
      <a style="pointer-events:{{checkPagecountfull data}}" class="page-link" href="/admin/list-users/{{plus pageCount}}" aria-label="Next">
        <span aria-hidden="true" style="color: #047b67;">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
</div>
<br>
<br>
<br>
</section>