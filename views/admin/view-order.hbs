
<div class="flex">
    <div class="card" style="
    margin-top: 5em;
    margin-left: 4em;">

<table class="table table-borderless">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th style="text-align: center;font-size: 1.4em;height: 4em;">Order Details</th>
        </tr>
    </thead>
  <thead style="height: 6em;">
    <tr>
        <th scope="col"></th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
       <th scope="col">Unit price</th>
        
      <th scope="col">Sub total</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
        <td></td>
      <td><img src="/uploads/{{products.Image}}" style="width: 4em;" alt="#"></td>
       <td>
        <h5 ><a href="">{{products.name}}</a></h5> 
    </td>
    <td>₹ {{products.newPrice}} x {{quantity}}</td>
    
     <td style="font-size: 1.3em;
    color: #088178;
    font-weight: bold;">₹ {{subTotal}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
<hr style="width: 38em;
    margin-inline: 3em;">
    <table style="width: 22em;
    margin-inline: 8em;
    font-size: 1.2em;">
<tbody>
    <tr>
        <td style="text-align: center;">Total:</td>
        <td style="text-align: center;
        color: #0a6d66;
        text-align: center;
        font-weight: 800;"
        >₹ {{order.Total}}</td>
    </tr>
</tbody>
    </table>
</div>
<br>
<br>

<div class="float-container">
    <div class="card float" style="width: 31em;
   margin-left: 6em;
   height:fit-content; 
    margin-top: 5em;">
<div>
<table class="table table-borderless">
  <thead style="height: 2em">
    <tr>
        <th scope="col"></th>
        <th scope="col"></th>
      <th style="font-size: 1.4em;height: 4em;" scope="col">Customer</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td></td>
        <td class="address">Name :</td>
        <td class="addr">{{Address.name}}</td>
    </tr>
 <tr>
    <td></td>
        <td class="address">Phone No :</td>
        <td class="addr">{{Address.contact}}</td>
    </tr>
     <tr>
        <td></td>
        <td class="address">Address :</td>
        <td class="addr">{{Address.address}},{{Address.locality}}</td>
    </tr>
         <tr>
            <td></td>
        <td class="address">City :</td>
        <td class="addr">{{Address.city}}</td>
    </tr>
         <tr>
            <td></td>
        <td class="address">State :</td>
        <td class="addr">{{Address.state}}</td>
    </tr>
         <tr>
            <td></td>
        <td class="address">Pincode :</td>
        <td class="addr">{{Address.pincode}}</td>
    </tr>
  </tbody>
</table>
</div>
</div>

<div class="card float" style="width: 31em;
    height: 4em;
    margin-left: 6em;
    background: aliceblue;">

    <div class="d-flex justify-content-around" style="padding-top: 1.4em;">

    <h5 id="status-id" style="font-family: ui-rounded;
    font-size: 1.3em;" >Status :</h5>
    <h5 id="{{order._id}}" style="margin-left: -5em;
    font-family: ui-rounded;
    font-size: 1.3em;">{{order.status}}</h5>
    {{#ifChecking order.status}}
    <div class="dropdown">
   <button class=="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="width:5em;margin-top: -0.5em;color: white;
    background: black;
    border-radius: 0.6em;
    border: none;">Change</button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <li><span class="dropdown-item" onclick="changeStatus((this.textContent || this.innerText),'{{order._id}}')">Approved</span></li>
    <li><span class="dropdown-item" onclick="changeStatus((this.textContent || this.innerText),'{{order._id}}')">Shipped</span></li>
    <li><span class="dropdown-item" onclick="changeStatus((this.textContent || this.innerText),'{{order._id}}')">Delivered</span></li>
  </ul>
</div>
{{/ifChecking}}
</div>
    
    </div>
</div>
</div>
<br>
<br>




