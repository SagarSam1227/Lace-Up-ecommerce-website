  </div> --}}

  <div class="form-group ml-5" style="width: 12em;
    float: right;
    margin-right: 31.7em;">
    <label for="formGroupExampleInput2">Image</label>
    <input type="file" name="Image" class="form-control" id="formGroupExampleInput2">
  </div>
    {{#if vdoErr}}
                                           <div class="alert alert-danger" role="alert" style="width: 25.5em;">

                                            <a href="" style="margin-left: 1em;">{{vdoErr}}</a>
                                                <img src="https://cdn-icons-png.flaticon.com/512/1182/1182679.png" style="height: 1.3em; width: 1.3em; margin-bottom: -0.3em;" alt="">
                                            </div>
                                            {{/if}}
  </div class="mt-4">
  <div class="form-group ml-5" style="width: 12em;">
    <label for="formGroupExampleInput2">stock</label>
    <input type="value" required="" name="stock" class="form-control"  id="stock" onkeyup="validPrice('stock')">
  </div>
  <br>
    <button type="submit" style="margin-top:1em;border-radius: unset;color:aliceblue;background: #0e4764;padding-inline: 1.2em;" class="btn btn-outline-info float-right">Add</button>
    <br><br><br><br><br><br>
</form>  


