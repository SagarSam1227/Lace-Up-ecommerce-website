<h5 class="text-center mb-3 mt-3 " style="padding-top: 5em;" >ADD PRODUCTS</h5>
<form action="/admin/add-product" enctype="multipart/form-data" method="post" style="margin-left: 33em;">
  <div class="form-group ml-5" style="width: 25em;">
    <label for="formGroupExampleInput">Name</label>
    <input type="text" name="name" class="form-control d-flex justify-content-center" id="formGroupExampleInput">
  </div>
  {{#if proExist}}
                                           <div class="alert alert-danger" role="alert" style="width: 25.5em;">

                                            <a href="" style="margin-left: 1em;">{{proExist}}</a>
                                                <img src="https://cdn-icons-png.flaticon.com/512/1182/1182679.png" style="height: 1.3em; width: 1.3em; margin-bottom: -0.3em;" alt="">
                                            </div>
                                            {{/if}}
 <label class="form-label">Category</label>
   <select id="category" onchange="getSubcategory()"  class="form-select ml-5" style="width: 22em;
    height: 3em;
    margin-bottom: 1em;" aria-label="Default select example" name="category">
  <option value="" hidden >Select category</option>
  <option value="Men"><a href="">Men</a></option>
  <option value="Women"><a href="">Women</a></option>
  <option value="Kids"><a href="">Kids</a></option>
</select>
<label class="form-label">Sub-Category</label>
   <select id="sub-category" class="form-select ml-5" style="width: 22em;
    height: 3em;
    margin-bottom: 1em;" aria-label="Default select example" name="subcategory">
</select>
  <div class="form-group ml-5" style="width: 25em;"> 
    <label for="formGroupExampleInput2">Price</label>
    <input type="value" required="" name="newPrice" class="form-control" onkeyup="validPrice('new-price')" id="new-price">
  </div>

